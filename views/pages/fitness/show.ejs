<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    <link rel="stylesheet" href="public/styles/result.css">
</head>

<body>
<main>
    <!-- <h1>the excercise result </h1> -->
    <% workout.forEach((val) => { %>

    <div>
        <form action="/addMachine" name="<%= val.data.id%>" method="POST" class="machine-form-result">
            <ul>
                <li> machine Name:</li>
                <input type="text" name="machine" value="<%= val.data.name %>">
                <br>
                <li> Category:  </li>
                <input type="text" name="catagory" value="<%= val.data.category %>">
                <br>
                <img class="machine-pic" src="<%= val.data.image ? val.data.image: 'https://cdn.improb.com/wp-content/uploads/2019/12/Marcy-Combo-Smith-Strength-Home-Gym-Machine-5276.jpg' %>" width="60%"  height="60%" alt="<%= val.data.name %> image" >
                <!-- <input type="text" name="url" value="<%= val.data.image %>"> -->
            </ul>
            <button type="submit"  class="add-machine-button">Add to my Exercises</button>
        </form>


        </div>



    <% }) %>
</main>

</body>

</html>