<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>My Profile </title>
    <link rel="stylesheet" href="public/styles/myProfile.css">
    <link rel="stylesheet" href="public/styles/style.css">
    <link rel="stylesheet" media="screen and (max-width: 768px)" href="public/styles/mobile.css">
    <link rel="stylesheet" media="screen and (min-width: 1100px)" href="public/styles/widescreen.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.7.2/animate.min.css">

</head>

<body>
    <%- include('../../partials/header') %>


    <div class="my-profile">

        <% table.forEach( (val) => { %>
        <div  class="My-choise">
            <section class="wow fadeInUp" data-wow-duration="1s" data-wow-delay="0.5s" class="results">
                <div class="food-Result-1">
                    <ul class="food-result-list-client">
                        <li> calories: <%= val.cal%> </li>
                        <li> protien: <%= val.prot %> </li>
                        <li> fat: <%= val.fat %> </li>
                        <li> carbohydrate: <%= val.carb %> </li>

                        </u>
                </div>
                <section class="my-choises">
                    <!-- <button class="button" >update</button> -->
                    <!-- <form action="<%=`/delete/${val.id}?_method=DELETE`%>"method="POST"> -->
                    <form action="/delete_prog/<%= val.id %>?_method=DELETE" method="POST">
                        <button class="button">Delete</button>
                    </form>

                    <% let jsonData = JSON.parse(val.meals) %>
                    <section class="all-food-section">
                        <% jsonData.forEach( (meal) => { %>
                        <div class="food-Section">
                            <ul class="food-result-list">
                                <img id="resultImage"
                                    src="https://spoonacular.com/recipeImages/<%=meal.imageUrls[0] %>">
                                <li>Meal Name: <%= meal.title %> </li>
                                <li>Ready in minutes: <%= meal.readyInMinutes %> </li>
                                <li>Serving: <%= meal.servings %> </li>
                            </ul>
                        </div>
                        <% }) %>
                    </section>
                </section>
            </section>
        </div>
        <% }) %>
        </section>
    </div>
    <script src="https://code.jquery.com/jquery-3.1.1.js"></script>
    <script src="public/js/app.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/wow/1.1.2/wow.js"></script>
    <script>
      new WOW().init();
      </script>
  
</body>

</html>